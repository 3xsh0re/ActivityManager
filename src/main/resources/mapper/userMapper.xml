<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.activity_manage.Mapper.UserMapper">
    <insert id="insertUser" parameterType="com.example.activity_manage.Entity.User">
        insert into User(username,passwd,phone_number,email,role) values(#{username},#{passwd},#{phone_number},#{email},0)
    </insert>
    <select id="selectUserByPhone" resultType="com.example.activity_manage.Entity.User">
        SELECT * FROM User WHERE phone_number = #{phone}
    </select>
    <select id="selectAllUser" resultType="com.example.activity_manage.Entity.VO.GetUserVO">
        SELECT id, username, phone_number, email FROM User
    </select>
    <select id="selectAllPhone">
        SELECT phone_number FROM User
    </select>
</mapper>